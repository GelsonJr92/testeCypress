# Environment Variables for Cypress Testing

# Application URLs
CYPRESS_BASE_URL=http://localhost:3000
CYPRESS_API_URL=http://localhost:3000/api

# Database Configuration
DATABASE_URL=postgresql://localhost:5432/testdb
TEST_DATABASE_URL=postgresql://localhost:5432/testdb_test

# Authentication
JWT_SECRET=your-jwt-secret-key-here
AUTH_TOKEN_EXPIRY=3600

# Test Configuration
NODE_ENV=test
CYPRESS_ENV=test
TEST_TIMEOUT=30000

# Cypress Cloud (Optional)
# CYPRESS_RECORD_KEY=your-cypress-record-key
# CYPRESS_PROJECT_ID=your-cypress-project-id

# API Configuration
API_TIMEOUT=10000
API_RETRY_ATTEMPTS=3

# Email Testing (Optional)
# MAILHOG_URL=http://localhost:8025
# TEST_EMAIL_DOMAIN=example.com

# Browser Configuration
CYPRESS_BROWSER=chrome
CYPRESS_VIEWPORT_WIDTH=1280
CYPRESS_VIEWPORT_HEIGHT=720

# Performance Testing
PERFORMANCE_THRESHOLD_MS=5000
API_RESPONSE_THRESHOLD_MS=2000

# Accessibility Testing
A11Y_LEVEL=AA
A11Y_TAGS=wcag2a,wcag2aa

# Debug Configuration
CYPRESS_DEBUG=false
CYPRESS_VERBOSE=false

# CI/CD Configuration
CI=false
PARALLEL=false
RECORD=false
