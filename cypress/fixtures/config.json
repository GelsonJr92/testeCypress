{
  "api": {
    "baseUrl": "http://localhost:3000/api",
    "timeout": 30000,
    "retries": 2,
    "headers": {
      "Content-Type": "application/json",
      "Accept": "application/json"
    }
  },
  "auth": {
    "tokenEndpoint": "/auth/login",
    "refreshEndpoint": "/auth/refresh",
    "logoutEndpoint": "/auth/logout",
    "tokenStorage": "localStorage",
    "tokenKey": "authToken"
  },
  "ui": {
    "baseUrl": "http://localhost:3000",
    "selectors": {
      "forms": {
        "submitButton": "[data-testid='submit-btn']",
        "cancelButton": "[data-testid='cancel-btn']",
        "deleteButton": "[data-testid='delete-btn']",
        "editButton": "[data-testid='edit-btn']",
        "addButton": "[data-testid='add-btn']"
      },
      "tables": {
        "container": "[data-testid='data-table']",
        "rows": "[data-testid='table-row']",
        "headers": "[data-testid='table-header']",
        "pagination": "[data-testid='pagination']"
      },
      "modals": {
        "container": "[data-testid='modal']",
        "overlay": "[data-testid='modal-overlay']",
        "closeButton": "[data-testid='modal-close']"
      },
      "notifications": {
        "success": "[data-testid='success-notification']",
        "error": "[data-testid='error-notification']",
        "warning": "[data-testid='warning-notification']",
        "info": "[data-testid='info-notification']"
      }
    }
  },
  "database": {
    "connectionString": "postgresql://localhost:5432/testdb",
    "testSchema": "test_schema",
    "backupSchema": "backup_schema"
  },
  "performance": {
    "pageLoadTimeout": 5000,
    "apiResponseTimeout": 3000,
    "elementLoadTimeout": 2000
  },
  "accessibility": {
    "checkLevel": "AA",
    "includeTags": ["wcag2a", "wcag2aa"],
    "excludeTags": ["experimental"]
  },
  "screenshots": {
    "onFailure": true,
    "onSuccess": false,
    "folder": "cypress/screenshots",
    "format": "png"
  },
  "videos": {
    "record": true,
    "folder": "cypress/videos",
    "format": "mp4"
  }
}
